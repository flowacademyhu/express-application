<div class="userauth col-sm-5 col-md-4 col-lg-4 col-xl-3 p-3 my-3 mx-auto bg-dark text-white row">
  <form method="POST" action="/users/{{user.id}}?_method=put" class="my-3 mx-auto">
    <div class="circle mx-auto bg-success">
      <i class="fas fa-unlock fa-4x mt-3" aria-hidden="true"></i>
    </div>
    <h3 class="my-4">Change password</h3>
    <div class="form-group">
      <label>Password:</label>
      <input id="password" class="form-control" name="encryptedPassword" type="password" pattern="^\S{6,}$" onchange="this.setCustomValidity(this.validity.patternMismatch ? 'Must have at least 6 characters' : ''); if(this.checkValidity()) form.password_two.pattern = this.value;"
        required>
    </div>
    <div class="form-group">
      <label>Confirm password:</label>
      <input id="password_two" class="form-control" name="password_two" type="password" pattern="^\S{6,}$" onchange="this.setCustomValidity(this.validity.patternMismatch ? 'Please enter the same Password as above' : '');"
        required>
    </div>
    <button class="btn btn-success my-2 my-sm-3" type="submit">Update</button>
      <div>
      <a href="/users/{{user.id}}/editper">Personal data</a>
    </div>
    <div>
      <a href="/users/{{user.id}}/editloc">Location informations</a>
    </div>
  </form>
</div>