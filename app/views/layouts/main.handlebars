          <p>Here you can use rows and columns here to organize your footer content. Lorem ipsum dolor sit amet, consectetur
            adipisicing elit.</p>
        </div>
        <!-- Grid column -->
        <hr class="w-100 clearfix d-md-none">
        <!-- Grid column -->
        <div class="col-md-3 col-lg-2 col-xl-3 mx-auto mt-1">
          <h6 class="text-uppercase mb-4 font-weight-bold text-success">Let us help you</h6>
          <p>
            <a href="#!">Your Account</a>
          </p>
          <p>
            <a href="#!">Returns & Replacements</a>
          </p>
          <p>
            <a href="#!">Shipping Rates</a>
          </p>
          <p>
            <a href="#!">Help</a>
          </p>
        </div>
        <!-- Grid column -->
        <hr class="w-100 clearfix d-md-none">
        <!-- Grid column -->
        <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mt-1">
          <h6 class="text-uppercase mb-4 font-weight-bold text-success">Contact</h6>
          <p>
            <span class="fa fa-home mr-3" aria-hidden="true"></span>17 Todo Street, Szeged, 6723
          </p>
          <p>
            <i class="fa fa-envelope-square mr-3" aria-hidden="true"></i>todotodosshop@gmail.com</p>
          <p>
            <i class="fa fa-phone mr-3" aria-hidden="true"></i>+ 36 30 234 567 88</p>
          <p>
            <i class="fab fa-skype mr-3" aria-hidden="true"></i>Todo.Shop18</p>
        </div>
        <!-- Grid column -->
      </div>
      <!-- Footer links -->
      <!-- Grid row -->
      <div class="row d-flex align-items-center">
        <!-- Grid column -->
        <div class="col-md-4 col-lg-4 text-center">
          <!--Copyright-->
          <p class="text-center text-md-left ml-4">
            <b>Â© 2018 CODEZILLAS</b>
          </p>
        </div>
        <!-- Grid column -->
        <div class="col-md-4 col-lg-4">
          <!-- Social buttons -->
          <div class="text-center text-md-center">
            <ul class="list-unstyled list-inline">
              <li class="list-inline-item">
                <a class="btn-floating btn-sm rgba-white-slight mx-1">
                  <i class="fab fa-cc-visa fa-2x"></i>
                </a>
              </li>
              <li class="list-inline-item">
                <a class="btn-floating btn-sm rgba-white-slight mx-1">
                  <i class="fab fa-cc-mastercard fa-2x"></i>
                </a>
              </li>
              <li class="list-inline-item">
                <a class="btn-floating btn-sm rgba-white-slight mx-1">
                  <i class="fab fa-cc-amex fa-2x"></i>
                </a>
              </li>
              <li class="list-inline-item">
                <a class="btn-floating btn-sm rgba-white-slight mx-1">
                  <i class="fab fa-paypal fa-2x"></i>
                </a>
              </li>
              <li class="list-inline-item">
                <a class="btn-floating btn-sm rgba-white-slight mx-1">
                  <i class="fab fa-google-wallet fa-2x"></i>
                </a>
              </li>
            </ul>
          </div>
        </div>
        <!-- Grid column -->
      </div>
      <!-- Grid row -->
    </div>
  </footer>

  <script>
    /* Set the width of the side navigation to 250px */
    function openNav() {
      document.getElementById("mySidenav").style.width = "25vw";
    }
    /* Set the width of the side navigation to 0 */
    function closeNav() {
      document.getElementById("mySidenav").style.width = "0";
    }
  </script>

</body>

</html>