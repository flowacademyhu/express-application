  <h3 align="center" class="my-3"> Category admin </h3>
  
  {{#each categories}}

<div class="row justify-content-center align-self-center mt-2 mb-2">

  <div class="btn-group col-sm-2 ml-3"><h4>{{name}}</h4></div>
    
  <div class="btn-group col-sm-2">
    <a href="/admin/categories/{{id}}">
      <button type="submit" class="btn btn-outline-success">Show</button>
    </a>

    <a href="/admin/categories/{{id}}/edit">
      <button type="submit" class="btn btn-outline-success">Edit</button>
    </a>

    <form method="POST" action="/admin/categories/{{id}}?_method=delete">
      <button type="submit" class="btn btn-outline-success">Törlés</button>
    </form>
  </div>
 
</div>
 <hr style="width: 100%; color: black; height: 1px; background-color:black; padding:0; margin:0;"  />

{{/each}}
<div class="row justify-content-center col-sm-2 mt-2 mb-2"></div>
<div class="btn-group col-sm-2">
    <a href="/admin/categories/new">
      <button type="submit" class="btn btn-outline-success">Add new category</button>
    </a>
</div>  
</div>