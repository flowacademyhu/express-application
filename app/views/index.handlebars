<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="/images/slideshow/1.jpg" alt="First slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="/images/slideshow/2.png" alt="Second slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="/images/slideshow/3.jpg" alt="Third slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="/images/slideshow/4.jpg" alt="Third slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="/images/slideshow/5.jpg" alt="Third slide">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="bestsellers">
  <h2>Most popular items:</h2>

  <div class="container-fluid">
<div class="row products mx-auto">
{{#each products}}
<div class="col-xl-3 col-lg-4 col-md-6 col-sm-12">
<div class="card shadow mx-auto">
  <div id="cardimg">
    <a href="/products/{{id}}">
      {{#if picture}}
        <img class="card-img-top" src="/uploads/{{picture}}" alt="{{name}}" >
      {{else}}
        <img class="card-img-top" src="/images/noimg.jpg" alt="{{name}}">
      {{/if}}
    </a>
  </div>
  <div class="card-body cardfooter">
    <a href="/products/{{id}}">
      <h4 class="card-title text-capitalize">{{name}}</h4>
    </a>
    <div class="row d-flex justify-content-between mx-auto">
      <h5 class="card-text mt-2 col-sm-6 col-md-6 col-lg-12 col-xl-6">{{price}} Ft</h5>
      <form method="POST" action="/{{id}}?_method=put" class="col-sm-6 col-md-6 col-lg-12 col-xl-6">
        <div class="row mx-auto" style="background-color: yellow" id="cart">
          <input name="quantity" type="text" class="form-control text-center col-lg-4 col-sm-3 p-1 mr-2" value="1" min="1">
          <button  class="btn btn-success my-2 my-sm-0" type="submit"><i class="fa fa-shopping-cart mx-auto" title="Add to cart" alt="add to cart"></i></button>
        </div>
      </form>
    </div>
  </div>
</div>
</div>
{{/each}}
</div>
</div>
    


  </div>
</div>
